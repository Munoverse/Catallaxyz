{
  "name": "catallaxyz-backend",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "dev:data-api": "tsx watch src/data-api/server.ts",
    "dev:clob-api": "tsx watch src/clob-api/server.ts",
    "dev:ws": "tsx watch src/ws-server/server.ts",
    "dev:all": "concurrently \"npm:dev:data-api\" \"npm:dev:clob-api\" \"npm:dev:ws\"",
    "worker:persist": "tsx src/workers/persist.ts",
    "worker:settle": "tsx src/workers/settle.ts",
    "worker:settlement": "tsx src/workers/settlement-worker.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "start:data-api": "node dist/data-api/server.js",
    "start:clob-api": "node dist/clob-api/server.js",
    "start:ws": "node dist/ws-server/server.js"
  },
  "dependencies": {
    "@coral-xyz/anchor": "^0.32.1",
    "@fastify/autoload": "^6.3.1",
    "@fastify/cors": "^11.2.0",
    "@fastify/helmet": "^13.0.1",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/websocket": "^11.0.2",
    "@sentry/node": "^9.1.0",
    "@solana/spl-token": "^0.4.14",
    "@solana/web3.js": "^1.98.4",
    "@supabase/supabase-js": "^2.90.1",
    "@catallaxyz/shared": "workspace:*",
    "borsh": "^2.0.0",
    "bs58": "^6.0.0",
    "dotenv": "^17.2.3",
    "fastify": "^5.7.1",
    "ioredis": "^5.4.2",
    "tweetnacl": "^1.0.3",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/node": "^25.0.9",
    "@types/uuid": "^10.0.0",
    "concurrently": "^9.1.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
