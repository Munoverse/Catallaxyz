{
  "name": "catallaxyz-monorepo",
  "private": true,
  "scripts": {
    "dev:backend": "pnpm --filter catallaxyz-backend dev",
    "dev:frontend": "pnpm --filter catallaxyz-frontend dev",
    "dev:all": "pnpm --filter catallaxyz-backend dev:all & pnpm --filter catallaxyz-frontend dev",
    "build": "pnpm -r build",
    "build:backend": "pnpm --filter catallaxyz-backend build",
    "build:frontend": "pnpm --filter catallaxyz-frontend build",
    "build:shared": "pnpm --filter @catallaxyz/shared build",
    "lint": "pnpm -r lint",
    "test": "pnpm -r test",
    "clean": "pnpm -r clean"
  },
  "devDependencies": {
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  },
  "packageManager": "pnpm@9.0.0"
}
